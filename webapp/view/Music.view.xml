					<Input class="musicSearch" value="{/newMusicSearch}" placeholder="{i18n>music.search.placeholder}"
						   change="onSearchMusic"/>

					<Table id="idProductsTable"
						   inset="false"
						   items="{
							  path: '/itunesResult/results'
							}"
							itemPress="onOpenDialog"
							>
						<columns>
							<Column
									hAlign="Left"
									class="qty"
									popinDisplay="Inline"
									minScreenWidth="Tablet"
									demandPopin="true">
								<Text text="{i18n>music.cover}" />
							</Column>
							<Column
									minScreenWidth="Tablet"
									demandPopin="true"
									hAlign="Right">
								<Text text="{i18n>music.artist}" />
							</Column>
							<Column
									minScreenWidth="Tablet"
									demandPopin="true"
									hAlign="Right">
								<Text text="{i18n>music.track}" />
							</Column>
						</columns>
						<items>
							<ColumnListItem
									type="Navigation"
									unread="false"
									vAlign="Middle">
								<cells>
									<Image src="{artworkUrl60}" />
									<Text text="{artistName}" />
									<Text text="{trackName}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
